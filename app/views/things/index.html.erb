<p id="notice"><%= notice %></p>

<h1>Listing Things</h1>

<div id="mount_here"></div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>

<%= stylesheet_pack_tag 'application' %>
<%= javascript_pack_tag 'application' %>

<script>
  Mushy.application.renderApplication({
    elementId: "mount_here",
    assets: "//example.com/changed/"
  });
</script>

